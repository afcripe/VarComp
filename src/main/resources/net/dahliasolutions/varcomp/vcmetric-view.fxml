<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.dahliasolutions.varcomp.VCMetricController">

   <children>
      <Label fx:id="lblTitle" layoutX="14.0" layoutY="14.0" text="Metrics">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font>
      </Label>
      <Button fx:id="btnMetricHome" layoutX="494.0" layoutY="12.0" prefWidth="75" text="Back" visible="false" />

      <Pane fx:id="paneMetricTable" visible="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="44.0">
         <Button fx:id="bntNewMetric" layoutX="415.0" layoutY="15.0" mnemonicParsing="true" prefWidth="125" text="New Metric" />
         <!-- <Button fx:id="bntDeleteKPIClass" layoutX="504.0" layoutY="15.0" mnemonicParsing="false" prefWidth="75" text="Delete" /> -->
         <TableView fx:id="tblMetrics" editable="false" layoutX="45.0" layoutY="50.0" prefHeight="220.0" prefWidth="550.0">
            <columns>
               <TableColumn fx:id="tbcMetricLabel" editable="false" prefWidth="42.5" text="Metric" />
               <TableColumn fx:id="tbcMetricEarnings" editable="false" prefWidth="250.5" text="Earnings" />
               <TableColumn fx:id="tbcMetricPayout" editable="false" prefWidth="90.5" text="Payout" />
               <TableColumn fx:id="tbcMetricStatus" editable="false" minWidth="0.0" prefWidth="81.5" text="Status" />
            </columns>
         </TableView>
         <Pane fx:id="paneFormNewMetric" layoutX="45.0" layoutY="50.0" opacity="0.95" prefHeight="220.0" prefWidth="550.0"
               style="-fx-background-color: lightblue; -fx-border-color: grey;" visible="false">
            <children>
               <Label alignment="CENTER_RIGHT" layoutX="14.0" layoutY="18.0" prefHeight="17.0" prefWidth="72.0" text="Metric Label:" />
               <TextField fx:id="txtFormNewLabel" disable="true" layoutX="101.0" layoutY="14.0" prefHeight="25.0" prefWidth="369.0" />
               <Label alignment="CENTER_RIGHT" layoutX="17.0" layoutY="59.0" prefHeight="17.0" prefWidth="72.0" text="Year:" />
               <TextField fx:id="txtFormNewYear" layoutX="104.0" layoutY="55.0" prefHeight="25.0" prefWidth="125.0" />
               <Label fx:id="lblFormNewYearError" layoutX="105.0" layoutY="75.0" prefHeight="25.0" prefWidth="125.0"
                      text="Must be a Number!" textFill="#ba0202" visible="false">
                  <font>
                     <Font name="System Bold" size="10.0" />
                  </font></Label>
               <Label alignment="CENTER_RIGHT" layoutX="259.0" layoutY="59.0" prefHeight="17.0" prefWidth="72.0" text="Period:" />
               <TextField fx:id="txtFormNewPeriod" layoutX="346.0" layoutY="55.0" prefHeight="25.0" prefWidth="125.0" />
               <Label fx:id="lblFormNewPeriodError" layoutX="347.0" layoutY="75.0" prefHeight="25.0" prefWidth="125.0"
                      text="Must be a Number!" textFill="#ba0202" visible="false">
                  <font>
                     <Font name="System Bold" size="10.0" />
                  </font></Label>
               <Button fx:id="btnFormNewMetric_cancel" layoutX="317.0" layoutY="110.0" mnemonicParsing="false" prefWidth="95" text="Cancel" />
               <Button fx:id="btnFormNewMetric_save" layoutX="432.0" layoutY="110.0" mnemonicParsing="false" prefWidth="95" text="Save" />
            </children>
         </Pane>
      </Pane>

   </children>
</AnchorPane>
