<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.dahliasolutions.varcomp.VCMetricController">

<!--    Navigation    -->
   <HBox alignment="CENTER" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="14.0" AnchorPane.rightAnchor="14.0">
      <Label fx:id="lblTitle" text="Metrics">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font>
      </Label>
      <HBox HBox.hgrow="ALWAYS" />
      <HBox alignment="CENTER_RIGHT" spacing="8">
         <Button fx:id="btnMetricSave" prefWidth="75" text="Save" visible="false" />
         <Button fx:id="btnMetricHome" prefWidth="75" text="Back" visible="false" />
      </HBox>
   </HBox>


   <ScrollPane fx:id="spnMetricDetail" fitToWidth="true" AnchorPane.bottomAnchor="3.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="44.0">
            <Pane>

            <VBox fx:id="paneMetricTable" spacing="8.0">
               <HBox>
                  <HBox prefHeight="25.0" prefWidth="350.0" />
                  <Button fx:id="bntNewMetric" prefWidth="125" text="New Metric" />
               </HBox>
               <!-- <Button fx:id="bntDeleteKPIClass" layoutX="504.0" layoutY="15.0" mnemonicParsing="false" prefWidth="75" text="Delete" /> -->
               <TableView fx:id="tblMetrics" prefHeight="220.0" prefWidth="550.0">
                  <columns>
                     <TableColumn fx:id="tbcMetricLabel" editable="false" prefWidth="150" text="Metric" />
                     <TableColumn fx:id="tbcMetricEarnings" editable="false" prefWidth="100" text="Earnings" />
                     <TableColumn fx:id="tbcMetricPayout" editable="false" prefWidth="100" text="Payout" />
                     <TableColumn fx:id="tbcMetricStatus" editable="false" minWidth="75" prefWidth="81.5" text="Status" />
                  </columns>
               </TableView>
               <padding>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </padding>
            </VBox>

            <VBox fx:id="paneFormNewMetric" spacing="8.0" style="-fx-background-color: lightblue; -fx-border-color: grey;" visible="false">
               <HBox>
                  <Label alignment="CENTER_RIGHT" prefWidth="72.0" text="Metric Label:" />
                  <TextField fx:id="txtFormNewLabel" disable="true" prefWidth="369.0" />
               </HBox>
               <HBox>
                  <Label alignment="CENTER_RIGHT" prefWidth="72.0" text="Year:" />
                  <TextField fx:id="txtFormNewYear" prefWidth="125.0" />
                  <Label alignment="CENTER_RIGHT" prefWidth="72.0" text="Period:" />
                  <TextField fx:id="txtFormNewPeriod" prefWidth="125.0" />
               </HBox>
               <HBox>
                  <Label fx:id="lblFormNewYearError" prefWidth="125.0" text="Must be a Number!" textFill="#ba0202" visible="false">
                     <font>
                        <Font name="System Bold" size="10.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblFormNewPeriodError" prefWidth="125.0" text="Must be a Number!" textFill="#ba0202" visible="false">
                     <font>
                        <Font name="System Bold" size="10.0" />
                     </font>
                  </Label>
               </HBox>
               <HBox spacing="4.0">
                  <HBox HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnFormNewMetric_cancel" mnemonicParsing="false" prefWidth="95" text="Cancel" />
                  <Button fx:id="btnFormNewMetric_save" mnemonicParsing="false" prefWidth="95" text="Save" />
               </HBox>
               <padding>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </padding>
            </VBox>

            <VBox fx:id="paneMetricDetail" fillWidth="false" spacing="8.0" visible="false">
               <HBox minHeight="4" prefHeight="4.0" prefWidth="450.0">
                  <HBox fx:id="boxMetricDetailStatus" minHeight="4" minWidth="500.0" prefHeight="5.0" style="-fx-background-color: DARKGREEN;" />
               </HBox>
               <HBox alignment="CENTER_LEFT" spacing="4.0">
                  <Label alignment="CENTER_RIGHT" prefWidth="75.0" text="Metric:" />
                  <TextField fx:id="txtDetailMetricLabel" editable="false" prefWidth="273.0" />
                  <HBox prefHeight="25.0" prefWidth="50.0" />
                  <Label alignment="CENTER_RIGHT" prefWidth="75.0" text="Close Metric:" />
                  <CheckBox fx:id="chkDetailMetricLocked" mnemonicParsing="false" />
               </HBox>
               <HBox alignment="CENTER_LEFT" spacing="4.0">
                  <Label alignment="CENTER_RIGHT" prefWidth="75.0" text="Year:" />
                  <TextField fx:id="txtDetailMetricYear" prefWidth="95.0" />
                  <Label fx:id="lblDetailMetricYearWarn" accessibleText="Warning" prefWidth="8" text="*" textFill="RED">
                        <font>
                           <Font name="System Bold" size="18.0" />
                        </font></Label>
                  <Label alignment="CENTER_RIGHT" prefWidth="75.0" text="Period:" />
                  <TextField fx:id="txtDetailMetricPeriod" prefWidth="80.0" />
                  <Label fx:id="lblDetailMetricPeriodWarn" prefWidth="8" text="*" textFill="RED">
                        <font>
                           <Font name="System Bold" size="18.0" />
                        </font></Label>
               </HBox>
               <HBox fx:id="boxMetricDetailTable" spacing="4.0">
                  <TableView fx:id="tblDetailMetricPeriods" prefHeight="115.0" prefWidth="433.0">
                     <columns>
                        <TableColumn fx:id="tbcDetailPeriod" prefWidth="45.0" text="Period" />
                        <TableColumn fx:id="tbcDetailBudget" prefWidth="128.0" text="Budget" />
                        <TableColumn fx:id="tbcDetailActual" prefWidth="128.0" text="Actual" />
                        <TableColumn fx:id="tbcDetailEarnings" prefWidth="128.0" text="Earnings" />
                     </columns>
                  </TableView>
                  <VBox spacing="4.0">
                     <Button fx:id="btnDetailAddMetricDetail" mnemonicParsing="false" prefWidth="81.0" text="Insert" />
                     <Button fx:id="btnDetailRemoveMetricDetail" mnemonicParsing="false" prefWidth="81.0" text="Remove" />
                  </VBox>
               </HBox>
               <HBox>
                  <VBox spacing="8.0">
                     <HBox alignment="CENTER_LEFT" spacing="4.0">
                        <Label alignment="CENTER_RIGHT" prefWidth="75.0" text="Earnings:" />
                        <TextField fx:id="txtDetailMetricEarning" editable="false" />
                     </HBox>
                     <HBox alignment="CENTER_LEFT" spacing="4.0">
                        <Label alignment="CENTER_RIGHT" prefWidth="75.0" text="Funding:" />
                        <TextField fx:id="txtDetailMetricFunding" editable="false" />
                     </HBox>
                     <HBox alignment="CENTER_LEFT" spacing="4.0">
                        <Label alignment="CENTER_RIGHT" prefWidth="75.0" text="Payout:" />
                        <TextField fx:id="txtDetailMetricPayout" editable="false" />
                     </HBox>
                  </VBox>
                  <VBox spacing="8.0">
                     <HBox alignment="CENTER_LEFT" spacing="4.0">
                        <Label alignment="CENTER_RIGHT" prefWidth="100.0" text="Shares:" />
                        <TextField fx:id="txtDetailMetricShares" editable="false" prefWidth="95.0" />
                        <Button fx:id="btnSharesRefresh" prefWidth="25" text="r" />
                     </HBox>
                     <HBox alignment="CENTER_LEFT" spacing="4.0">
                        <Label alignment="CENTER_RIGHT" prefWidth="100.0" text="EPS:" />
                        <TextField fx:id="txtDetailMetricEPS" editable="false" prefWidth="95.0" />
                     </HBox>
                  </VBox>
               </HBox>

            <!-- Company KPI Info -->
               <HBox alignment="CENTER_LEFT" spacing="8.0">
                  <Label prefWidth="150.0" text="Company KPIs">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                     <Line endX="175.0" startX="-175.0" />
                     <VBox.margin>
                        <Insets bottom="5.0" top="20.0" />
                     </VBox.margin>
               </HBox>
               <HBox alignment="CENTER_RIGHT" spacing="4.0">
                  <HBox prefWidth="200.0" />
                  <Button fx:id="btnAddCompanyKPI" mnemonicParsing="false" text="Add KPIs" />
                  <Button fx:id="btnRemoveCompanyKPI" mnemonicParsing="false" text="Remove Selected" />
                  <Button fx:id="btnRefreshCompanyKPI" mnemonicParsing="false" prefWidth="25.0" text="r" />
               </HBox>
               <TableView fx:id="tblDetailCompanyKPI" prefHeight="100.0" prefWidth="517.0">
                  <columns>
                     <TableColumn fx:id="tbcCompanyKPICode" prefWidth="175.0" text="KPI" />
                     <TableColumn fx:id="tbcCompanyKPIGrade" prefWidth="138.0" text="Grade" />
                     <TableColumn fx:id="tbcCompanyKPIScore" prefWidth="138.0" text="Score" />
                  </columns>
               </TableView>

            <!-- Employee Score and Bonus Info -->
               <HBox alignment="CENTER_LEFT" spacing="8.0">
                  <Label prefWidth="150.0" text="Scores and Bonuses">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <Line endX="175.0" startX="-175.0" />
                  <VBox.margin>
                     <Insets bottom="5.0" top="20.0" />
                  </VBox.margin>
               </HBox>
               <HBox alignment="CENTER_RIGHT" spacing="4.0">
                  <HBox prefWidth="200.0" />
                  <Button fx:id="btnAddEmployee" mnemonicParsing="false" text="Add Employees" />
                  <Button fx:id="btnRemoveEmployee" mnemonicParsing="false" text="Remove Selected" />
                  <Button fx:id="btnRefreshEmployee" mnemonicParsing="false" prefWidth="25.0" text="r" />
               </HBox>
               <TableView fx:id="tblDetailEmployeeScores" prefHeight="200.0" prefWidth="517.0">
                  <columns>
                     <TableColumn fx:id="tbcEmployeeName" prefWidth="175.0" text="Name" />
                     <TableColumn fx:id="tbcEmployeeShares" prefWidth="138.0" text="Shares" />
                     <TableColumn fx:id="tbcEmployeeScore" prefWidth="138.0" text="Score" />
                     <TableColumn fx:id="tbcEmployeeBonus" prefWidth="138.0" text="Bonus" />
                  </columns>
               </TableView>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </padding>
            </VBox>

            <VBox fx:id="formDetailMetricPeriod" spacing="8.0" style="-fx-background-color: lightblue; -fx-border-color: grey;" visible="false">
               <HBox>
                  <Label alignment="CENTER_RIGHT" layoutX="14.0" layoutY="18.0" prefHeight="17.0" prefWidth="95.0" text="Detail Period:">
                        <padding>
                           <Insets right="4.0" />
                        </padding></Label>
                  <TextField fx:id="txtFormDPPeriod" prefWidth="75.0" />
               </HBox>
               <HBox>
                  <Label alignment="CENTER_RIGHT" prefWidth="95.0" text="Budget:">
                        <padding>
                           <Insets right="4.0" />
                        </padding></Label>
                  <TextField fx:id="txtFormDPBudget" prefWidth="115.0" />
                  <Label alignment="CENTER_RIGHT" prefWidth="95.0" text="Actual:">
                        <padding>
                           <Insets right="4.0" />
                        </padding></Label>
                  <TextField fx:id="txtFormDPActual" prefWidth="115.0" />
               </HBox>
               <HBox>
                  <Label alignment="CENTER_RIGHT" prefWidth="95.0" text="Earnings:">
                        <padding>
                           <Insets right="4.0" />
                        </padding></Label>
                  <TextField fx:id="txtFormDPEarnings" prefWidth="115.0" />
               </HBox>

               <HBox spacing="4.0">
                  <HBox prefHeight="25.0" prefWidth="200.0" />
                  <TextField fx:id="txtFormDPDetailID" disable="true" prefWidth="50.0" />
                  <Button fx:id="btnFormDP_cancel" mnemonicParsing="false" prefWidth="95" text="Cancel" />
                  <Button fx:id="btnFormDP_save" mnemonicParsing="false" prefWidth="95" text="Save" />
               </HBox>
               <padding>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </padding>
            </VBox>

            </Pane>
      </ScrollPane>

</AnchorPane>
