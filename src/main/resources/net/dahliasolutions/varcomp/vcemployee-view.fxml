<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.dahliasolutions.varcomp.VCEmployeeController">

<!--   Navigation    -->
      <HBox alignment="CENTER_RIGHT" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="14.0" AnchorPane.rightAnchor="14.0">
         <Label fx:id="lblTitle" text="Employees">
            <font>
               <Font name="Arial Bold" size="18.0" />
            </font>
         </Label>
         <HBox HBox.hgrow="ALWAYS" />
         <Button fx:id="btnEditEmployee_save" prefWidth="75" text="Save" visible="false" />
         <Button fx:id="btnEmployeeHome" prefWidth="75" text="Back" visible="false" />
      </HBox>

<!--   Panels    -->
      <ScrollPane fitToWidth="true" AnchorPane.bottomAnchor="3.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="44.0">
         <Pane>

         <VBox fx:id="paneEmployeeTable" spacing="4.0">
                  <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
                     <HBox HBox.hgrow="ALWAYS" />
                     <Button fx:id="bntNewEmployee" prefWidth="125" text="New Employee" />
                     <padding>
                        <Insets right="16.0" />
                     </padding>
                  </HBox>
            <!-- <Button fx:id="bntDeleteKPIClass" layoutX="504.0" layoutY="15.0" mnemonicParsing="false" prefWidth="75" text="Delete" /> -->
            <TableView fx:id="tblEmployees" prefHeight="220.0" prefWidth="550.0">
               <columns>
                  <TableColumn fx:id="tbcEmployeeID" editable="false" prefWidth="42.5" text="ID" />
                  <TableColumn fx:id="tbcEmployeeName" editable="false" prefWidth="250.5" text="Name" />
                  <TableColumn fx:id="tbcEmployeePosition" editable="false" prefWidth="90.5" text="Position" />
                  <TableColumn fx:id="tbcEmployeeShares" editable="false" minWidth="0.0" prefWidth="81.5" text="Shares" />
                  <TableColumn fx:id="tbcEmployeeActive" editable="false" minWidth="0.0" prefWidth="90.5" text="Active" />
               </columns>
            </TableView>
            <padding>
               <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
            </padding>
         </VBox>

         <VBox fx:id="paneFormEmployee" alignment="TOP_CENTER" layoutX="4.0" layoutY="35.0" prefHeight="219.0" prefWidth="550.0" spacing="8.0" style="-fx-background-color: lightblue; -fx-border-color: grey;" visible="false">
            <HBox spacing="16">
               <VBox spacing="8.0">
                  <HBox spacing="4">
                     <Label alignment="CENTER_RIGHT" prefWidth="72.0" text="Employee ID:" />
                     <TextField fx:id="txtFormEmployeeID" prefWidth="75.0" />
                  </HBox>
                  <HBox spacing="4">
                     <Label alignment="CENTER_RIGHT" prefWidth="72.0" text="First Name:" />
                     <TextField fx:id="txtFormEmployeeFirstName" prefWidth="206.0" />
                  </HBox>
                  <HBox spacing="4">
                     <Label alignment="CENTER_RIGHT" prefWidth="72.0" text="Last Name:" />
                     <TextField fx:id="txtFormEmployeeLastName" prefWidth="206.0" />
                  </HBox>
                  <HBox spacing="4">
                     <Label alignment="CENTER_RIGHT" prefWidth="72.0" text="Position:" />
                     <ComboBox fx:id="cmbFormEmployeePosition" prefWidth="125.0" />
                  </HBox>
               </VBox>
               <VBox spacing="8.0">
                  <HBox spacing="4">
                     <Label alignment="CENTER_RIGHT" prefWidth="72.0" text="Active:" />
                     <CheckBox fx:id="chkFormEmployeeActive" />
                  </HBox>
                  <HBox spacing="4">
                     <Label alignment="CENTER_RIGHT" prefWidth="72.0" text="Start Date:" />
                     <DatePicker fx:id="pkrStartDate" prefWidth="125.0" />
                  </HBox>
                  <HBox spacing="4">
                     <Label alignment="CENTER_RIGHT" prefWidth="122.0" text="Start/Bonus Shares:" />
                     <TextField fx:id="txtFormEmployeeStartingShares" prefWidth="75.0" />
                  </HBox>
                  <HBox layoutX="10.0" layoutY="70.0" spacing="4">
                     <children>
                        <Label alignment="CENTER_RIGHT" prefWidth="122.0" text="Shares:" />
                        <TextField fx:id="txtFormEmployeeShares" disable="true" prefWidth="75.0" />
                     </children>
                  </HBox>
               </VBox>
            </HBox>
            <HBox spacing="4">
               <HBox HBox.hgrow="ALWAYS" />
               <Button fx:id="btnFormEmployee_cancel" mnemonicParsing="false" prefWidth="95" text="Cancel" />
               <Button fx:id="btnFormEmployee_save" mnemonicParsing="false" prefWidth="95" text="Save" />
            </HBox>
            <padding>
               <Insets bottom="4.0" left="4.0" right="4.0" top="16.0" />
            </padding>
         </VBox>

         <VBox fx:id="paneEmployeeDetail" visible="false">
            <HBox spacing="16">
               <VBox spacing="8.0">
                  <HBox spacing="4">
                     <Label alignment="CENTER_RIGHT" prefWidth="72.0" text="Employee ID:" />
                     <TextField fx:id="txtEmployeeID" disable="true" prefWidth="118.0">
                        <font>
                           <Font size="10.0" />
                        </font>
                     </TextField>
                  </HBox>
                  <HBox spacing="4">
                     <Label alignment="CENTER_RIGHT" prefWidth="72.0" text="First Name:" />
                     <TextField fx:id="txtEmployeeFirstName" prefWidth="206.0" />
                  </HBox>
                  <HBox spacing="4">
                     <Label alignment="CENTER_RIGHT" prefWidth="72.0" text="Last Name:" />
                     <TextField fx:id="txtEmployeeLastName" prefWidth="206.0" />
                  </HBox>
                  <HBox spacing="4">
                     <Label alignment="CENTER_RIGHT" prefWidth="72.0" text="Position:" />
                     <ComboBox fx:id="cmbEmployeePosition" prefWidth="125.0" />
                  </HBox>
               </VBox>
               <VBox spacing="8.0">
                  <HBox spacing="4">
                     <Label alignment="CENTER_RIGHT" prefWidth="72.0" text="Active:" />
                     <CheckBox fx:id="chkEmployeeActive" />
                  </HBox>
                  <HBox spacing="4">
                     <Label alignment="CENTER_RIGHT" prefWidth="72.0" text="Start Date:" />
                     <DatePicker fx:id="pkrEmployeeStartDate" prefWidth="125.0" />
                  </HBox>
                  <HBox spacing="4">
                     <Label alignment="CENTER_RIGHT" prefWidth="72.0" text="Shares:" />
                     <TextField fx:id="txtEmployeeShares" prefWidth="125.0" />
                  </HBox>
               </VBox>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="8.0">
               <Label prefWidth="150.0" text="Metrics">
                  <font>
                     <Font name="System Bold" size="16.0" />
                  </font>
               </Label>
               <Line endX="175.0" startX="-175.0" />
               <VBox.margin>
                  <Insets bottom="5.0" top="20.0" />
               </VBox.margin>
            </HBox>
            <padding>
               <Insets bottom="4.0" left="4.0" right="4.0" top="16.0" />
            </padding>
         </VBox>

         </Pane>
      </ScrollPane>

</AnchorPane>
